        padding: 0;
        list-style: none;
    }

    .timeline:before {
        content: "";
        position: absolute;
        top: 0;
        bottom: 0;
        left: 50%;
        width: 3px;
        margin-left: -1.5px;
        background: linear-gradient(to bottom, var(--primary-purple), var(--secondary-orange));
