        /* Futuristic Navbar Styles */
.navbar {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(15px);
    padding: 0.7rem 1rem;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.05);
    border-bottom: 1px solid rgba(255, 255, 255, 0.3);
    z-index: 1000;
    transition: all 0.3s ease;
}

.navbar.scrolled {
    background: rgba(255, 255, 255, 0.98);
    padding: 0.5rem 1rem;
}

.navbar-brand {
    font-weight: 800;
    font-size: 2rem;
    color: var(--primary-purple);
    position: relative;
    letter-spacing: -0.5px;
    transition: all 0.3s ease;
}

.brand-accent {
    color: var(--secondary-orange);
    font-size: 2.2rem;
}

.navbar-brand:hover {
    transform: translateY(-2px);
    color: var(--primary-purple);
}

.navbar-nav {
    align-items: center;
}

.nav-item {
    margin: 0 0.3rem;
}

.nav-link {
    color: var(--text-dark);
    font-weight: 600;
    padding: 0.7rem 1rem;
    border-radius: 10px;
    position: relative;
    display: flex;
    align-items: center;
    transition: all 0.3s ease;
    overflow: hidden;
}

.nav-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 8px;
    width: 28px;
    height: 28px;
    border-radius: 8px;
    background: linear-gradient(135deg, rgba(85, 98, 112, 0.1), rgba(78, 205, 196, 0.2));
    transition: all 0.3s ease;
}

.nav-link:before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 10%;
    width: 80%;
    height: 3px;
    background: linear-gradient(90deg, var(--primary-purple), var(--secondary-orange));
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.4s ease;
    border-radius: 3px;
}

.nav-link:hover:before,
.nav-link.active:before {
    transform: scaleX(1);
    transform-origin: left;
}

.nav-link:hover {
    color: var(--primary-purple);
    background: rgba(78, 205, 196, 0.08);
    transform: translateY(-2px);
}

.nav-link:hover .nav-icon {
    background: linear-gradient(135deg, rgba(85, 98, 112, 0.2), rgba(78, 205, 196, 0.4));
}

.nav-button {
    background: linear-gradient(135deg, var(--primary-purple), var(--secondary-orange));
    color: white;
    padding: 0.6rem 1.2rem;
    border-radius: 30px;
    margin-left: 10px;
    box-shadow: 0 4px 15px rgba(78, 205, 196, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.nav-button:hover,
.nav-button:focus {
    background: linear-gradient(135deg, var(--secondary-orange), var(--primary-purple));
    color: white;
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(78, 205, 196, 0.4);
}

.navbar-toggler {
    border: none;
    background: linear-gradient(135deg, rgba(85, 98, 112, 0.1), rgba(78, 205, 196, 0.2));
    padding: 0.6rem;
    border-radius: 12px;
    backdrop-filter: blur(4px);
    transition: all 0.3s ease;
}

.navbar-toggler:hover {
    background: linear-gradient(135deg, rgba(85, 98, 112, 0.2), rgba(78, 205, 196, 0.3));
}

.navbar-toggler:focus {
    box-shadow: 0 0 0 0.2rem rgba(78, 205, 196, 0.25);
}

/* Mobile Navigation Styles */
