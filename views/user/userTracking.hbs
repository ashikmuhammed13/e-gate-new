        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        body {
            padding-top: 80px; /* Add padding to account for fixed navbar */
            font-family: 'Poppins', sans-serif;
            background-color: var(--bg);
            color: var(--dark);
            line-height: 1.7;
            background-image: 
                radial-gradient(circle at 10% 20%, rgba(99, 102, 241, 0.05) 0%, transparent 20%),
                radial-gradient(circle at 90% 80%, rgba(139, 92, 246, 0.05) 0%, transparent 25%),
                radial-gradient(circle at 50% 50%, rgba(56, 189, 248, 0.05) 0%, transparent 30%);
            background-attachment: fixed;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: 'Space Grotesk', sans-serif;
            font-weight: 700;
            letter-spacing: -0.03em;
        }

        /* Glass Morphism Card */
        .glass-card {
            background: var(--glass-bg);
            backdrop-filter: blur(12px);
            border: 1px solid var(--glass-border);
            border-radius: 24px;
            box-shadow: 0 8px 32px 0 var(--glass-shadow);
        }

        .tracking-wrapper {
            max-width: 1200px;
            margin: 3rem auto;
            padding: 1rem;
        }

        .order-card {
            padding: 2.5rem;
            margin-bottom: 2rem;
            position: relative;
            overflow: hidden;
        }

        .card-decoration {
            position: absolute;
            width: 300px;
            height: 300px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--gradient-start), var(--gradient-end));
            opacity: 0.05;
            z-index: 0;
        }

        .decoration-1 {
            top: -150px;
            right: -150px;
        }

        .decoration-2 {
            bottom: -150px;
            left: -150px;
        }

        .order-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            margin-bottom: 2rem;
            position: relative;
            z-index: 1;
        }

        .tracking-title {
            font-size: 2.5rem;
            margin: 0;
            background: linear-gradient(135deg, var(--gradient-start), var(--gradient-end));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        .tracking-number {
            font-size: 1.1rem;
            color: var(--neutral);
            margin: 0.5rem 0 0;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            padding: 0.6rem 1.2rem;
            border-radius: 100px;
            font-weight: 600;
            font-size: 0.95rem;
            gap: 0.5rem;
            color: white;
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
            box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
        }

        .pulse {
            height: 10px;
            width: 10px;
            background-color: white;
            border-radius: 50%;
            display: inline-block;
            animation: pulse 1.5s infinite;
        }

        @keyframes pulse {
            0% {
                transform: scale(0.95);
                box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.7);
            }
            70% {
                transform: scale(1);
                box-shadow: 0 0 0 10px rgba(255, 255, 255, 0);
            }
            100% {
                transform: scale(0.95);
                box-shadow: 0 0 0 0 rgba(255, 255, 255, 0);
            }
        }

        .delivery-info {
            display: flex;
            flex-wrap: wrap;
            gap: 2rem;
            margin-bottom: 3rem;
            position: relative;
            z-index: 1;
        }

        .delivery-date-wrapper {
            flex: 1;
            min-width: 280px;
        }

        .date-label {
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: var(--neutral);
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

        .delivery-date {
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, var(--gradient-start), var(--gradient-end));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            margin: 0;
        }

        .countdown {
            margin-top: 0.5rem;
            font-weight: 500;
            font-size: 1.1rem;
        }

        .countdown span {
            color: var(--primary);
            font-weight: 600;
        }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 1.5rem;
            padding: 2rem;
            border-radius: 20px;
            background: var(--neutral-light);
            margin-bottom: 3rem;
            position: relative;
            z-index: 1;
        }

        .info-card {
            padding: 1.5rem;
            border-radius: 16px;
            background: var(--card-bg);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
            display: flex;
            flex-direction: column;
        }

        .info-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
        }

        .info-header {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 1rem;
        }

        .info-icon {
            width: 40px;
            height: 40px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            background: var(--primary-bg);
            color: var(--primary);
        }

        .info-title {
            font-size: 1rem;
            font-weight: 600;
            color: var(--neutral);
            margin: 0;
        }

        .info-content {
            font-size: 1rem;
            line-height: 1.6;
        }

        .info-content strong {
            font-weight: 600;
            color: var(--dark);
        }

        /* Modern Timeline */
        .timeline-container {
            position: relative;
            margin: 4rem 0;
            padding-top: 2rem;
        }

        .timeline-track {
            position: absolute;
            top: 50px;
            left: 0;
            width: 100%;
            height: 4px;
            background: var(--neutral-light);
            border-radius: 4px;
            z-index: 1;
        }

        .timeline-progress {
            position: absolute;
            height: 100%;
            width: var(--progress-width, 0%);
            background: linear-gradient(90deg, var(--gradient-start), var(--gradient-end));
            border-radius: 4px;
            transition: width 1.5s cubic-bezier(0.65, 0, 0.35, 1);
        }

        .timeline-steps {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            position: relative;
            z-index: 2;
        }

        .timeline-step {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            padding: 0 1rem;
            position: relative;
        }

        .step-icon {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            background: white;
            border: 3px solid var(--neutral);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.75rem;
            color: var(--neutral);
            position: relative;
            z-index: 2;
            transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            margin-bottom: 1.5rem;
        }

        .step-content {
            padding: 1.5rem;
            background: white;
            border-radius: 20px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.06);
            width: 100%;
            transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
            min-height: 150px;
            display: flex;
            flex-direction: column;
        }

        .step-content:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
        }

        .step-title {
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .step-location {
            color: var(--neutral);
            font-size: 0.9rem;
            flex-grow: 1;
        }

        .step-time {
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid var(--neutral-light);
            font-size: 0.9rem;
            display: flex;
            justify-content: space-between;
            color: var(--neutral);
        }

        /* Timeline Status Classes */
        .timeline-step.completed .step-icon {
            background: linear-gradient(135deg, var(--success), #34d399);
            border-color: var(--success);
            color: white;
            transform: scale(1.05);
        }

        .timeline-step.active .step-icon {
            background: linear-gradient(135deg, var(--gradient-start), var(--gradient-end));
            border-color: var(--primary);
            color: white;
            transform: scale(1.2);
            box-shadow: 0 0 25px rgba(99, 102, 241, 0.4);
            animation: pulse-border 2s infinite;
        }

        @keyframes pulse-border {
            0% {
                box-shadow: 0 0 0 0 rgba(99, 102, 241, 0.4);
            }
            70% {
                box-shadow: 0 0 0 15px rgba(99, 102, 241, 0);
            }
            100% {
                box-shadow: 0 0 0 0 rgba(99, 102, 241, 0);
            }
        }

        .timeline-step.active .step-content {
            background: linear-gradient(135deg, white, var(--primary-bg));
            border: 1px solid rgba(99, 102, 241, 0.2);
        }

        .timeline-step.completed .step-content {
            background: linear-gradient(135deg, white, var(--success-light));
            border: 1px solid rgba(16, 185, 129, 0.2);
        }

        /* Detailed Timeline */
        .detailed-timeline {
            margin-top: 4rem;
        }

        .timeline-title {
            font-size: 2rem;
            margin-bottom: 2rem;
            background: linear-gradient(135deg, var(--gradient-start), var(--gradient-end));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        .detailed-events {
            position: relative;
            padding-left: 3rem;
        }

        .detailed-events::before {
            content: '';
            position: absolute;
            left: 8px;
            top: 0;
            height: 100%;
            width: 3px;
            background: linear-gradient(to bottom, var(--gradient-start), var(--gradient-end));
            border-radius: 3px;
        }

        .event-item {
            position: relative;
            margin-bottom: 2.5rem;
        }

        .event-marker {
            position: absolute;
            left: -3rem;
            top: 0.5rem;
        }

        .marker-dot {
            width: 18px;
            height: 18px;
            border-radius: 50%;
            background: var(--neutral);
            border: 3px solid white;
            box-shadow: 0 0 0 3px var(--neutral);
        }

        .event-item.active .marker-dot {
            background: var(--primary);
            box-shadow: 0 0 0 3px var(--primary), 0 0 20px rgba(99, 102, 241, 0.4);
        }

        .event-card {
            background: white;
            border-radius: 20px;
            padding: 1.75rem;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .event-card:hover {
            transform: translateX(10px);
            box-shadow: 0 12px 35px rgba(0, 0, 0, 0.15);
        }

        .event-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 1rem;
        }

        .event-status {
            font-size: 1.1rem;
            font-weight: 700;
            margin: 0;
        }

        .event-timestamp {
            text-align: right;
            font-size: 0.9rem;
            color: var(--neutral);
        }

        .event-timestamp span {
            display: block;
        }

        .event-details {
            color: var(--neutral);
            font-size: 0.95rem;
        }

        /* Mobile Styles */
        @media (max-width: 768px) {
            .tracking-wrapper {
                padding: 0.75rem;
                margin: 2rem auto;
            }

            .order-card, .info-grid {
                padding: 1.5rem;
            }

            .tracking-title {
                font-size: 1.75rem;
            }

            .delivery-date {
                font-size: 2rem;
            }

            .timeline-steps {
                grid-template-columns: 1fr;
                gap: 3rem;
            }

            .timeline-track {
                display: none;
            }

            .timeline-step {
                display: grid;
                grid-template-columns: auto 1fr;
                grid-template-areas: 
                    "icon content";
                text-align: left;
                align-items: center;
                gap: 1rem;
            }

            .step-icon {
                grid-area: icon;
                margin-bottom: 0;
            }

            .step-content {
                grid-area: content;
            }

            .timeline-step::after {
                content: '';
                position: absolute;
                left: 35px;
                top: 70px;
                height: calc(100% + 3rem);
                width: 3px;
                background: var(--neutral-light);
                z-index: 1;
            }

            .timeline-step:last-child::after {
                display: none;
            }

            .step-title {
                font-size: 1rem;
            }

            .detailed-events {
                padding-left: 2.5rem;
            }

            .event-marker {
                left: -2.5rem;
            }

            .event-header {
                flex-direction: column;
                gap: 0.5rem;
            }

            .event-timestamp {
                text-align: left;
            }
        }

        /* Animation Keyframes */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .fadeIn {
            animation: fadeIn 0.7s ease-out forwards;
        }

        .delay-1 { animation-delay: 0.2s; }
        .delay-2 { animation-delay: 0.4s; }
        .delay-3 { animation-delay: 0.6s; }
        .delay-4 { animation-delay: 0.8s; }
        .delay-5 { animation-delay: 1s; }
    </style>
</head>
