    }

    .live-chat-card {
        background: white;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .chat-icon {
        width: 80px;
        height: 80px;
        border-radius: 50%;
