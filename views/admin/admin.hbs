<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modern Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <style>
       :root {
    --dark-bg: #0a0a0f;
    --card-bg: rgba(255, 255, 255, 0.05);
    --text-primary: #fff;
    --text-secondary: rgba(255, 255, 255, 0.7);
    --neon-accent: #0ea5e9;
    --neon-glow: 0 0 10px rgba(14, 165, 233, 0.5);
     --primary-color: #4f46e5;
           --sidebar-width: 280px;
    --sidebar-bg: rgba(15, 23, 42, 0.95);
    --sidebar-hover: rgba(30, 41, 59, 0.8);
    --neon-accent: #0ea5e9;
    --neon-glow: 0 0 10px rgba(14, 165, 233, 0.5);
    --glass-effect: blur(10px);
}
/* Sidebar Base Styles */
.sidebar {
    width: var(--sidebar-width);
    background: var(--sidebar-bg);
    backdrop-filter: var(--glass-effect);
    -webkit-backdrop-filter: var(--glass-effect);
    border-right: 1px solid rgba(255, 255, 255, 0.1);
    position: fixed;
    height: 100vh;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow-y: auto;
    scrollbar-width: none; /* Firefox */
}

.sidebar::-webkit-scrollbar {
    display: none; /* Chrome/Safari */
}

/* Logo Section */
.sidebar .logo {
     padding: 1.5rem;
    background: linear-gradient(
        to bottom,
        rgba(15, 23, 42, 0.98),
        rgba(15, 23, 42, 0.95)
    );
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
     margin-bottom: 1rem;
}

.sidebar .logo h4 {
    font-size: 1.25rem;
    font-weight: 600;
    background: linear-gradient(120deg, #fff, var(--neon-accent));
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    letter-spacing: 0.5px;
}

/* Navigation Links */
.sidebar .nav-link {
    color: rgba(255, 255, 255, 0.7);
    padding: 0.8rem 1.2rem;
    margin: 0.5rem 1rem;
     border-radius: 8px;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    position: relative;
    font-weight: 500;
    letter-spacing: 0.3px;
}

.sidebar .nav-link:hover {
    background: var(--sidebar-hover);
    color: var(--neon-accent);
    box-shadow: var(--neon-glow);
}

.sidebar .nav-link i {
    width: 24px;
    text-align: center;
    margin-right: 12px;
    font-size: 1.1rem;
}

/* Active Link Styles */
.sidebar .nav-link.active-nav-link {
    background: rgba(14, 165, 233, 0.15);
    color: var(--neon-accent);
    box-shadow: var(--neon-glow);
}

.sidebar .nav-link.active-nav-link::before {
    content: '';
    position: absolute;
    left: -0.8rem;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 20px;
    background: var(--neon-accent);
    border-radius: 0 4px 4px 0;
    box-shadow: var(--neon-glow);
}

/* Hover Effects */
.sidebar .nav-link:hover i {
    transform: translateX(3px);
    color: var(--neon-accent);
}

/* Navigation Group */
.nav.flex-column {
    padding-top: 0.5rem;
}
body {
    background-color: var(--dark-bg);
    color: var(--text-primary);
    font-family: 'Plus Jakarta Sans', sans-serif;
}

.profile-section {
    background: var(--card-bg);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
}

.verification-step {
    transition: all 0.3s ease;
}

.modal-content {
    background: var(--dark-bg);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.btn-link {
    color: var(--neon-accent);
    text-decoration: none;
}

.btn-link:hover {
    color: var(--text-primary);
    text-decoration: underline;
}

/* Optional: Add animation for step transitions */
.verification-step {
    animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
}

/* Override Bootstrap's default white background */
.table {
    background-color: #1a1a1a !important; /* Dark background */
    color: #e0e0e0 !important; /* Light text */
}

.admin-table {
    background: #1a1a1a !important; /* Dark background */
    border-radius: 12px;
    color: #e0e0e0;
}

/* Override Bootstrap's striped table if used */
.table-striped > tbody > tr:nth-of-type(odd) {
    background-color: #1f1f1f !important; /* Slightly lighter dark for striped rows */
}

/* Override table hover state */
.table-hover tbody tr:hover {
    background-color: #252525 !important;
}

/* Style table header */
.admin-table thead {
    background: #2c2c2c !important;
}

.admin-table thead th {
    color: #0ea5e9 !important;
    border: none;
    padding: 1rem;
    background-color: #2c2c2c !important;
}

/* Style table body */
.admin-table tbody td {
    color: #e0e0e0;
    border-color: #333333;
    background-color: #1a1a1a !important;
}

/* Override any Bootstrap background colors */
.table > :not(caption) > * > * {
    background-color: transparent !important;
    border-bottom-color: #333333;
    color: #e0e0e0;
}

/* Style the table container */
.table-responsive {
    background-color: #1a1a1a !important;
    border-radius: 12px;
}

/* Additional style for the profile section containing the table */
.profile-section {
    background: #1a1a1a !important;
}

.form-control, .form-select {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: var(--text-primary);
}

.btn-primary {
    background: var(--neon-accent);
    border: none;
    box-shadow: var(--neon-glow);
}

.status-badge {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 30px;
}

.modal-content {
    background: var(--dark-bg);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.top-navbar {
    background: var(--card-bg);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            transition: all 0.3s ease;
        }

       

        .dashboard-wrapper {
            display: flex;
        }

        .main-content {
            flex-grow: 1;
            margin-left: var(--sidebar-width);
            padding: 2rem;
            background: transparent;
            min-height: 100vh;
        }

        .top-navbar {
            background: rgba(30, 41, 59, 0.7);
            backdrop-filter: blur(15px);
            border-radius: 12px;
            padding: 1rem 2rem;
            margin-bottom: 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

      

        .profile-image-container {
            position: relative;
            width: 200px;
            height: 200px;
            margin: 0 auto 1.5rem;
        }

        .profile-image {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid var(--accent-color);
        }

      

        .form-control, .form-select {
            background: rgba(30, 41, 59, 0.6);
            border: 1px solid rgba(100, 116, 139, 0.3);
            color: var(--text-primary);
        }

        .form-control:focus, .form-select:focus {
            background: rgba(243, 243, 243, 0.8);
            border-color: var(--accent-color);
            box-shadow: 0 0 15px rgba(34, 211, 238, 0.2);
        }

        .form-label {
            color: var(--text-secondary);
            text-transform: uppercase;
            font-size: 0.8rem;
        }

        .btn-primary {
            background-color: var(--accent-color);
            border: none;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 7px 14px rgba(34, 211, 238, 0.3);
        }

        .status-badge {
            padding: 0.3rem 0.8rem;
            border-radius: 20px;
            font-size: 0.8rem;
        }

        .status-active {
            background-color: rgba(16, 185, 129, 0.2);
            color: var(--secondary-color);
        }

        .status-inactive {
            background-color: rgba(244, 63, 94, 0.2);
            color: #f43f5e;
        }

     

        @media (max-width: 768px) {
            .main-content {
                margin-left: 0;
                padding: 1rem;
            }
        }
    </style>
</head>
<body>
      <div class="wrapper">
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="logo">
                <h4 class="mb-0">E Gate Shipping</h4>
            </div>
             <div class="nav flex-column">
                <a href="/admin/track"class="nav-link ">
                    <i class="bi bi-truck"></i> 
                    Tracking
                </a>

               <a href="/admin/createAwb"class="nav-link">
                    <i class="bi bi-files"></i>
                    Create AWB
                </a>
               
               <a href="/admin/mawb" class="nav-link ">
                    <i class="bi bi-file-earmark-break"></i> 
                    Master AWB
                </a>

                <a href="/admin/fetchShipment" class="nav-link">
                    <i class="bi bi-pencil-square"></i>
                    Update AWB
                </a>
                <a href="/admin/getShipment" class="nav-link">
                    <i class="bi bi-boxes"></i>
                    All Shipments
                </a>
                 <a href="/admin/airlines" class="nav-link">
            <i class="bi bi-cloud"></i>
            Airlines
        </a>
                 <a href="/admin/profile"class="nav-link active-nav-link">
                <i class="bi bi-gear-fill"></i>
            Admin Profile
        </a>

       
            </div>
        </nav>
    <div class="dashboard-wrapper">
        <div class="main-content">
            <!-- Top Navbar -->
            <div class="top-navbar">
                <div class="d-flex align-items-center">
                    <h4 class="mb-0">
                        {{#if isSuperAdmin}}Admin Management{{else}}My Profile{{/if}}
                    </h4>
                </div>
                {{#if isSuperAdmin}}
                <div>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newAdminModal">
                        <i class="fas fa-plus me-2"></i>Add New Admin
                    </button>
                </div>
                {{/if}}
            </div>

            <!-- Super Admin View -->
            {{#if isSuperAdmin}}
            <div class="profile-section">
                <div class="table-responsive admin-table">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Admin</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each adminList}}
                            <tr>
                                <td>{{this.firstName}} {{this.lastName}}</td>
                                <td>{{this.email}}</td>
                                <td>{{this.role}}</td>
                                <td>
                                    <span class="status-badge {{#if this.isActive}}status-active{{else}}status-inactive{{/if}}">
                                        {{this.status}}
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex">
                                        <button class="btn btn-sm btn-outline-primary me-2 edit-admin" data-id="{{this._id}}">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger delete-admin" data-id="{{this._id}}">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            {{else}}
            <!-- Normal Admin Profile View -->
            <div class="profile-section">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <div class="profile-image-container mb-3">
                            <img src="{{admin.profileImage}}" alt="Profile" class="profile-image">
                        </div>
                        <button class="btn btn-primary">
                            <i class="fas fa-upload me-2"></i>Update Photo
                        </button>
                    </div>
                    <div class="col-md-8">
                        <form id="profileUpdateForm">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">First Name</label>
                                    <input type="text" class="form-control" value="{{admin.firstName}}" readonly>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Last Name</label>
                                    <input type="text" class="form-control" value="{{admin.lastName}}" readonly>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" class="form-control" value="{{admin.email}}" readonly>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Role</label>
                                    <input type="text" class="form-control" value="{{admin.role}}" readonly>
                                </div>
                            </div>
                            
                            <div class="mt-4">
                                <h5 class="text-secondary mb-3">Change Password</h5>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Current Password</label>
                                        <input type="password" class="form-control" name="currentPassword">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">New Password</label>
                                        <input type="password" class="form-control" name="newPassword">
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary">Update Password</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            {{/if}}

            <!-- New Admin Modal -->
     {{#if isSuperAdmin}}
<div class="modal fade" id="newAdminModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header border-bottom-0">
        <h5 class="modal-title">Add New Admin</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <!-- Step 1: Email Verification -->
        <form id="adminRegistrationForm" class="verification-step active">
          <div class="mb-3">
            <label class="form-label">Email Address</label>
            <input type="email" class="form-control" name="email" required>
          </div>
          <div class="modal-footer border-top-0">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Send OTP</button>
          </div>
        </form>

        <!-- Step 2: OTP Verification -->
        <form id="otpVerificationForm" class="verification-step" style="display: none;">
          <div class="mb-3">
            <label class="form-label">Enter OTP</label>
            <input type="text" class="form-control" name="otp" required maxlength="6">
            <small class="text-muted">Please enter the 6-digit code sent to your email</small>
          </div>
          <div class="modal-footer border-top-0">
            <button type="button" class="btn btn-link" id="resendOTP">Resend OTP</button>
            <button type="submit" class="btn btn-primary">Verify OTP</button>
          </div>
        </form>

        <!-- Step 3: Admin Details -->
        <form id="finalAdminForm" class="verification-step" style="display: none;">
          <!-- Hidden field for the verified email -->
          <input type="hidden" name="email">
            <!-- Hidden field for status -->
  <input type="hidden" name="status" value="active">
          <div class="row">
            <div class="col-md-6 mb-3">
              <label class="form-label">First Name</label>
              <input type="text" class="form-control" name="firstName" required>
            </div>
            <div class="col-md-6 mb-3">
              <label class="form-label">Last Name</label>
              <input type="text" class="form-control" name="lastName" required>
            </div>
            <div class="col-md-6 mb-3">
              <label class="form-label">Role</label>
              <select class="form-select" name="role" required>
                <option value="">Select Role</option>
                <option value="Super Admin">Super Admin</option>
                <option value="Admin">Admin</option>
                <option value="Moderator">Moderator</option>
              </select>
            </div>
            <div class="col-md-6 mb-3">
              <label class="form-label">Password</label>
              <input type="password" class="form-control" name="password" required>
            </div>
          </div>
          <div class="modal-footer border-top-0">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Create Admin</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{/if}}
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
// Step 1: Send OTP
document.getElementById('adminRegistrationForm').addEventListener('submit', async function(e) {
  e.preventDefault();
  const email = this.email.value;

  const response = await fetch('/admin/send-otp', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ email })
  });
  const data = await response.json();
  if (data.success) {
    // Hide email form; show OTP form
    this.style.display = 'none';
    document.getElementById('otpVerificationForm').style.display = 'block';
    // Store the email in the hidden field of the final form
    document.querySelector('#finalAdminForm input[name="email"]').value = email;
  } else {
    alert(data.message);
  }
});

// Step 2: Verify OTP
document.getElementById('otpVerificationForm').addEventListener('submit', async function(e) {
  e.preventDefault();
  const email = document.querySelector('#finalAdminForm input[name="email"]').value;
  const otp = this.otp.value;

  const response = await fetch('/admin/verify-otp', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ email, otp })
  });
  const data = await response.json();
  if (data.success) {
    // Hide OTP form; show final admin details form
    this.style.display = 'none';
    document.getElementById('finalAdminForm').style.display = 'block';
  } else {
    alert(data.message);
  }
});

// Step 3: Final Admin Details Submission
document.getElementById('finalAdminForm').addEventListener('submit', async function(e) {
  e.preventDefault();
  // Gather all form data into an object
  const formData = new FormData(this);
  const dataToSend = {};
  formData.forEach((value, key) => {
    dataToSend[key] = value;
  });

  const response = await fetch('/admin/add-admin', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify(dataToSend)
  });
  const resData = await response.json();
  if (resData.success) {
    alert('Admin created successfully!');
    location.reload(); // Or close the modal
  } else {
    alert(resData.message);
  }
});

// Resend OTP functionality
document.getElementById('resendOTP').addEventListener('click', async function(e) {
  e.preventDefault();
  const email = document.querySelector('#finalAdminForm input[name="email"]').value;
  const response = await fetch('/admin/send-otp', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ email })
  });
  const data = await response.json();
  alert(data.message);
});
</script>

</body>
</html>