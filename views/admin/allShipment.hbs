  <div class="dashboard-stats">
        <div class="row g-4">
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-icon" style="background: #e3f2fd;">
                        <i class="bi bi-box-seam text-primary fs-4"></i>
                    </div>
                    <h3 class="fs-2 fw-bold">{{stats.total}}</h3>
                    <p class="text-muted mb-0">Total Shipments</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-icon" style="background: #e8f5e9;">
                        <i class="bi bi-check-circle text-success fs-4"></i>
                    </div>
                    <h3 class="fs-2 fw-bold">{{stats.delivered}}</h3>
                    <p class="text-muted mb-0">Delivered</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-icon" style="background: #fff3e0;">
                        <i class="bi bi-truck text-warning fs-4"></i>
                    </div>
                    <h3 class="fs-2 fw-bold">{{stats.inTransit}}</h3>
                    <p class="text-muted mb-0">In Transit</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-icon" style="background: #ffebee;">
                        <i class="bi bi-exclamation-circle text-danger fs-4"></i>
                    </div>
                    <h3 class="fs-2 fw-bold">{{stats.exceptions}}</h3>
                    <p class="text-muted mb-0">Exceptions</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Shipments Table -->
    <div class="shipment-table mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="fw-bold text-dark mb-0">All Shipments</h4>
            <button class="btn btn-md btn-outline-primary" type="button" data-bs-toggle="collapse" 
                    data-bs-target="#filterCollapse" aria-expanded="false" aria-controls="filterCollapse">
                <i class="bi bi-funnel"></i> Filters & Search
            </button>
        </div>

        <div class="collapse mb-4" id="filterCollapse">
            <div class="card border-0 shadow-sm">
                <div class="card-body bg-light rounded">
                    <form id="filterForm" action="/admin/getShipment" method="GET">
                        <div class="row g-3">
                            <!-- Search Input -->
                            <div class="col-md-6">
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0">
                                        <i class="bi bi-search text-muted"></i>
                                    </span>
                                    <input type="text" class="form-control border-start-0" id="searchInput" name="search" 
                                           placeholder="Search by AWB, sender, recipient, location..." value="{{filters.search}}">
                                </div>
                            </div>
                            
                            <!-- Status Filter -->
                            <div class="col-md-3">
                                <select class="form-select" id="statusFilter" name="status">
                                    <option value="All" {{#if (eq filters.status 'All')}}selected{{/if}}>All Status</option>
                                    <option value="Created" {{#if (eq filters.status 'Created')}}selected{{/if}}>Created</option>
                                    <option value="Pickup Scheduled" {{#if (eq filters.status 'Pickup Scheduled')}}selected{{/if}}>Pickup Scheduled</option>
                                    <option value="Picked Up" {{#if (eq filters.status 'Picked Up')}}selected{{/if}}>Picked Up</option>
                                    <option value="In Transit" {{#if (eq filters.status 'In Transit')}}selected{{/if}}>In Transit</option>
                                    <option value="Out for Delivery" {{#if (eq filters.status 'Out for Delivery')}}selected{{/if}}>Out for Delivery</option>
                                    <option value="Delivered" {{#if (eq filters.status 'Delivered')}}selected{{/if}}>Delivered</option>
                                    <option value="Failed Delivery" {{#if (eq filters.status 'Failed Delivery')}}selected{{/if}}>Failed Delivery</option>
                                    <option value="Cancelled" {{#if (eq filters.status 'Cancelled')}}selected{{/if}}>Cancelled</option>
                                </select>
                            </div>
                            
                            <!-- Action Buttons -->
                            <div class="col-md-3 d-flex">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="bi bi-search"></i> Search
                                </button>
                                <button type="button" id="resetFilters" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i> Reset
                                </button>
                            </div>
                        </div>
                        
                        <hr class="my-3">
                        
                        <!-- Date Range Filters -->
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label for="startDate" class="form-label small text-muted">From Date</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0">
                                        <i class="bi bi-calendar3 text-muted"></i>
                                    </span>
                                    <input type="date" class="form-control border-start-0" id="startDate" name="startDate" value="{{filters.startDate}}">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label for="endDate" class="form-label small text-muted">To Date</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0">
                                        <i class="bi bi-calendar3 text-muted"></i>
                                    </span>
                                    <input type="date" class="form-control border-start-0" id="endDate" name="endDate" value="{{filters.endDate}}">
                                </div>
                            </div>
                            <div class="col-md-4 d-flex align-items-end">
                                <button type="button" id="exportBtn" class="btn btn-success w-100">
                                    <i class="bi bi-file-earmark-excel"></i> Export to CSV
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Shipments Table -->
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="border-0 px-4 py-3">AWB Number</th>
                                <th class="border-0 px-4 py-3">Status</th>
                                <th class="border-0 px-4 py-3">Sender</th>
                                <th class="border-0 px-4 py-3">Recipient</th>
                                <th class="border-0 px-4 py-3">Current Location</th>
                                <th class="border-0 px-4 py-3">Last Update</th>
