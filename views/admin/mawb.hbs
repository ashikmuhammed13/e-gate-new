   <script>
  document.addEventListener('DOMContentLoaded', function() {
    // Form validation and floating labels
    const form = document.getElementById('mawbForm');
    form.addEventListener('submit', function(event) {
      if (!form.checkValidity()) {
        event.preventDefault();
        event.stopPropagation();
      }
      form.classList.add('was-validated');
    });
    const inputs = document.querySelectorAll('.form-control, .form-select');
    inputs.forEach(input => {
      input.addEventListener('focus', () => {
        input.parentElement.classList.add('focused');
      });
      input.addEventListener('blur', () => {
        if (!input.value) {
          input.parentElement.classList.remove('focused');
        }
      });
    });

    // Populate AWB numbers based on selected airline prefix
    const airlineSelect = document.getElementById('airlineSelect');
    const awbNumberContainer = document.getElementById('awbNumberContainer');
    const awbNumberSelect = document.getElementById('awbNumberSelect');
    const hawbButtonContainer = document.getElementById('hawbButtonContainer');
    const createHawbBtn = document.getElementById('createHawbBtn');

    // AWB data is passed from the server as a JSON string using Handlebars
    const awbNumbers = JSON.parse('{{{json awbNumbers}}}');

    airlineSelect.addEventListener('change', function () {
      const selectedPrefix = this.value;
      awbNumberSelect.innerHTML = '<option value="" selected disabled>Select AWB Number</option>';
      if (selectedPrefix) {
        awbNumberContainer.style.display = 'block';
        // Filter and populate AWB numbers based on the selected airline prefix
        awbNumbers.forEach(awb => {
          if (awb.prefix === selectedPrefix) {
            const option = document.createElement('option');
            option.value = awb.awbNumber;
            option.textContent = awb.awbNumber;
            awbNumberSelect.appendChild(option);
          }
        });
      } else {
        awbNumberContainer.style.display = 'none';
      }
      // Hide the HAWB button until an AWB number is selected
      hawbButtonContainer.style.display = 'none';
    });

    // When an AWB number is selected, update the HAWB link and reveal the hidden button
    awbNumberSelect.addEventListener('change', function () {
      const selectedAwb = this.value;
      if (selectedAwb) {
        // Update the HAWB link with the selected MAWB (AWB) number as a query parameter.
        createHawbBtn.href = "/admin/hawb?mawbNumber=" + encodeURIComponent(selectedAwb);
        hawbButtonContainer.style.display = 'block';
      } else {
        hawbButtonContainer.style.display = 'none';
      }
    });
  });
</script>
